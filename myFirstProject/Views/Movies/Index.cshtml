@*Define model*@
@model IEnumerable<Movie>

@*Define ViewData*@

@{
    ViewData["Title"] = "List of Movies";
}

<div class = "row">
   @foreach (var item in Model)
   {
    
       <div class = "col-md-4 col-xs-6 border-primary mb-3">
           <div class="card mb-3" style="max-width: 540px;">
               <div class = "row g-0">
                   <div class ="col-md-12">
                       <div class="card-header text-white bg-info">
                           <p class="card-text">
                               <h5 class="card-title">
                                   @item.Name 
                                   <a class="text-white float-right"><i class="bi bi-pencil-square "></i></a>
                               </h5>
                           </p>
                       </div>
                   </div>

                   <div class = "col-md-6">
                       <img src="@item.ImgURL" width="170" alt="@item.Name">
                   </div>

                   <div class = "col-md-6">
                       <div class ="card-body">
                           <p class = "card-text">@item.Description </p>
                           <p class = "card-text"><b>Cinema: </b>@item.Name</p>
                           <p class = "card-text"><b>Category: </b>@item.MovieCategory</p>
                           <p class = "card-text"><b>Start Date: </b>@item.StartDate.Value.ToString("dd MMM yyyy")</p>
                           <p class = "card-text"><b>End Date: </b>@item.EndDate.Value.ToString("dd MMM yyyy")</p>
                           <p class = "card-text">
                               <b>Status:</b>
                                @if (DateTime.Now >= @item.StartDate && DateTime.Now <= @item.EndDate)
                                {
                                    <span class = "badge bg-success text-dark">AVAILABLE</span>
                                }
                                else if(DateTime.Now <= @item.StartDate && DateTime.Now <= @item.EndDate)
                                {
                                    <span class = "badge bg-warning text-dark">UPCOMING</span>

                                }else
                                {
                                    <span class = "badge bg-danger text-white">Expired</span>
                                }

                            </p>

                       </div>
                   </div>

                   <div class ="col-md-12">
                       <div class = "card-footer">
                           <p class="card-text">
                               <a class="btn btn-outline-primary float-right"><i class= "b bi-eye-fill"></i>Show Details</a>
                               <a class="btn btn-success text-white float-left"><i class = "bi bi-cart-plus"></i> Add to Cart (Price @item.Price.ToString("c"))</a>
                           </p>
                       </div>
                   </div>

               </div>
           </div>

       </div>
   }
</div>


